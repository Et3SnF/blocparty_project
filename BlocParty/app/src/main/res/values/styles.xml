<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/material_indigo_700</item>
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorAccent">@color/black_87</item>
        <item name="colorControlActivated">@color/black_60</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@color/white_60</item>

        <!-- For Popup Window-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <!-- AlertDialog Colors -->

    <style name="MaterialAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name = "colorAccent">@color/material_teal_primary</item>
        <item name = "android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="LoginBottomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/material_indigo_500</item>
    </style>

    <!-- Point of Interest Styles -->

    <style name="LoginItemName">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="LoginItemDescription">

        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>

    </style>

</resources>
